generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String?

  credits      Int      @default(2000)
  creditsTotal Int      @default(2000)
  planName     String   @default("Free Plan")
  planStatus   String   @default("Inactive")
  stripeCustomerId     String?  @unique
  stripeSubscriptionId String?  @unique
  stripePriceId        String?

  preferredLanguage    String  @default("en")
  timezone             String  @default("UTC")
  outputFormat         String  @default("PNG")
  defaultQuality       Int     @default(90)
  allowUsageData       Boolean @default(false)
  publicProfile        Boolean @default(true)
  notifyProductUpdates Boolean @default(true)
  notifySecurityAlerts Boolean @default(true)

  resetTokens  PasswordResetToken[]
  jobs        Job[]
  vintedDescriptions VintedDescription[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}

model Job {
  id                String   @id @default(cuid())
  status            String   @default("queued")
  error             String?

  creditsCost       Int      @default(50)

  inputKey          String
  inputOriginalName String?
  inputMime         String
  inputSize         Int

  outputKey         String?
  outputMime        String?
  outputSize        Int?

  outputFormat      String   @default("PNG")
  quality           Int      @default(90)

  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId, createdAt])
  @@index([status, createdAt])
}

model VintedDescription {
  id          String   @id @default(cuid())
  productType String
  brand       String
  size        String
  condition   String
  style       String?
  details     String?
  tone        String?
  language    String?
  short       String
  selling     String
  seo         String

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@index([userId, createdAt])
}
